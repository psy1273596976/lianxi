<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="#474545">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="我的"
            android:textSize="@dimen/dp_14"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#FFFEFE"
            />
        <ImageView
            android:id="@+id/me_head_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/a10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_60"
            />
        <TextView
            android:id="@+id/me_head_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/me_head_img"
            android:text="点击登录"
            android:textSize="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#FFFEFE"
            android:layout_marginTop="@dimen/dp_80"
            />
        <ImageView
            android:id="@+id/me_head_jt_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/a2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_75"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    第一行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/me_ll_dingdan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:src="@mipmap/a1"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_youhuiquan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:src="@mipmap/a3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_lipinka"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼品卡"
                />
        </LinearLayout>
    </LinearLayout>

    <!--    第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/me_ll_shoucang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a6"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_zuji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a5"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的足迹"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_fuli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员福利"
                />
        </LinearLayout>
    </LinearLayout>

    <!--    第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/me_ll_dizhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a5"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址管理"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_zhanghao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a6"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号安全"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_lianxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a7"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                />
        </LinearLayout>
    </LinearLayout>

    <!--    第四行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/me_ll_bangzhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a8"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助中心"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_ll_fankui"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@mipmap/a9"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>