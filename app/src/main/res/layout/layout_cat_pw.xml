<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/xat_pw_close"
        android:src="@mipmap/ic_arrow_down_select"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/cat_pw_img"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"/>
    <TextView
        android:id="@+id/cat_pw_price"
        android:layout_toRightOf="@id/cat_pw_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:text="价格：200"
        android:textSize="@dimen/sp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cat_pw_price_num"
        android:layout_toRightOf="@id/cat_pw_img"
        android:layout_below="@id/cat_pw_price"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="已选择：请选择规格数量"
        android:textSize="@dimen/sp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cat_pw_num"
        android:textSize="@dimen/sp_13"
        android:text="数量"
        android:layout_below="@id/cat_pw_img"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/cat_pw_num"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_reduce"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:background="@drawable/shape_txt_border"
            android:text="-"/>
        <TextView
            android:id="@+id/txt_number"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/txt_reduce"
            android:gravity="center"
            android:background="@drawable/shape_txt_border"
            android:text="1"/>
        <TextView
            android:id="@+id/txt_add"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/txt_number"
            android:gravity="center"
            android:background="@drawable/shape_txt_border"
            android:text="+"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>