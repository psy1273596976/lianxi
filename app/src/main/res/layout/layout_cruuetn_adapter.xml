<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_current_head"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"/>

    <TextView
        app:layout_constraintRight_toRightOf="@id/img_current_head"
        app:layout_constraintLeft_toLeftOf="@id/img_current_head"
        app:layout_constraintTop_toBottomOf="@id/img_current_head"
        android:id="@+id/tv_current_title"
        android:text="1111"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>