<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/txt_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        app:layout_constraintTop_toBottomOf="@id/img_topic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:id="@+id/txt_topic_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="222"
        android:textColor="@color/price"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/img_topic"
        app:layout_constraintLeft_toRightOf="@id/txt_topic_name"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:id="@+id/txt_topic_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="333"
        app:layout_constraintTop_toBottomOf="@id/txt_topic_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="1"
        android:textSize="@dimen/sp_12"/>
</androidx.constraintlayout.widget.ConstraintLayout>